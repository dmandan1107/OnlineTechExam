@model OnlineTechExamMVC.Models.UserProfile

<h2>Edit User</h2>

<form asp-action="Edit">
    <input asp-for="UserID" type="hidden" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" type="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control" required>
            <option value="Male" selected="@(Model.Gender == "Male")">Male</option>
            <option value="Female" selected="@(Model.Gender == "Female")">Female</option>
            <option value="Other" selected="@(Model.Gender == "Other")">Other</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Birthday"></label>
        <input asp-for="Birthday" type="date" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Update</button>
</form>
